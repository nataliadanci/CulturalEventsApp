<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulturalEventsApp.ListEntryPage"
             Title="Lista mea de evenimente">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="AdaugÄƒ eveniment"
                     Clicked="OnEventAddedClicked" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView"
          Margin="20"
          ItemSelected="OnEventViewItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Vertical" Padding="10">
                        <Label Text="{Binding Title}" />
                        <Label Text="{Binding Description}"/>
                        <Label Text="{Binding Adress}" />
                        <Label Text="{Binding Date, StringFormat='Data: {0:dd/MM/yyyy}'}"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
    