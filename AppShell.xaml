<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CulturalEventsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CulturalEventsApp"
    Shell.FlyoutBehavior="Disabled"
    Title="CulturalEventsApp">

    <TabBar>
        <ShellContent
            Title="Bine ați venit!"
            ContentTemplate="{DataTemplate local:MainPage}"
        />
        <ShellContent
           Title="Despre"
           ContentTemplate="{DataTemplate local:AboutPage}"
        />

        <ShellContent
            Title="Lista mea de evenimente"
            ContentTemplate="{DataTemplate local:ListEntryPage}"
        />
        <ShellContent
            Title="Locațiile mele"
            ContentTemplate="{DataTemplate local:VenueEntryPage}"
        />
       
    </TabBar>

</Shell>
