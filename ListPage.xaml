<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             x:Class="CulturalEventsApp.ListPage"
             Title="Detalii eveniment">
    <StackLayout Margin="20">
        <!-- Introducere titlu eveniment -->
        <Editor Placeholder="Introduceți titlul evenimentului"
                Text="{Binding Title}"
                HeightRequest="50" />

        <!-- Introducere descriere eveniment -->
        <Editor Placeholder="Introduceți descrierea evenimentului"
                Text="{Binding Description}"
                HeightRequest="100" />

        <!-- Selector de dată pentru eveniment -->
        <DatePicker Date="{Binding Date}" 
                    Format="dd/MM/yyyy"
                    MinimumDate="{x:Static System:DateTime.Now}" />

        <!-- Selector de locație -->
        <Picker x:Name="VenuePicker" 
                Title="Introduceți numele locației" 
                ItemsSource="{Binding VenueName}" 
                ItemDisplayBinding="{Binding VenueDetails}"
                SelectedIndexChanged="OnVenueSelected" />

        <!-- Câmpul de bifat pentru favorite -->
        <CheckBox IsChecked="{Binding IsFavorite}"
                  Color="GreenYellow"
                  HorizontalOptions="Start"
                  VerticalOptions="Center"
                  Margin="10"
                  x:Name="FavoriteCheckBox"/>
        <Label Text="Adaugă la favorite" VerticalOptions="Center" />

        <!-- Butoane Salvare și Anulare -->
        <Grid Margin="10,20,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Salvează"
                    Clicked="OnSaveButtonClicked" />
            <Button Grid.Column="1"
                    Text="Anulează"
                    Clicked="OnCancelButtonClicked" />
            <Button Grid.Column="2"
                    Text="Șterge"
                    Clicked="OnDeleteButtonClicked" />
        </Grid>

        <!-- Buton Ștergere (Vizibil doar la hover) -->
        <Button Text="🗑️"
                Grid.Column="1"
                Command="{Binding DeleteCommand}"
                CommandParameter="{Binding}"
                BackgroundColor="Transparent"
                TextColor="Red"
                IsVisible="False" />

    </StackLayout>

    <!-- Vizibilitate la hover -->
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup x:Name="CommonStates">
            <VisualState x:Name="PointerOver">
                <VisualState.Setters>
                    <Setter Property="IsVisible" Value="True" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>

</ContentPage>
