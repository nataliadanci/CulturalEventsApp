 <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CulturalEventsApp.VenuePage"
             Title="Detalii locație"><ScrollView>
    <Frame CornerRadius="10" BorderColor="Black" Margin="0,10" BackgroundColor="DarkGray" WidthRequest="400" HeightRequest="300">
        <StackLayout Margin="15" Spacing="10" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Locația: " FontSize="18" TextColor="Black" />
            <!-- Introducere numele locației -->
            <Editor Placeholder="Introduceți numele locației"
                    Text="{Binding VenueName}"
                    HeightRequest="50"
                    WidthRequest="300"
                    TextColor="Black"/>

            <!-- Introducere adresa locației -->
            <Editor Placeholder="Introduceți adresa"
                    Text="{Binding Adress}"
                    HeightRequest="50"
                    WidthRequest="300"
                    TextColor="Black"/>

            <!-- Butoane Salvează și Show on Map -->
            <Grid Margin="0,20,0,0" WidthRequest="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Salvează"
                        Clicked="OnSaveButtonClicked"
                        BackgroundColor="Purple"
                        TextColor="White"
                        CornerRadius="10"
                        Margin="5" />
                <Button Grid.Column="1"
                        Text="Anulează"
                        Clicked="OnCancelButtonClicked"
                        BackgroundColor="#CCCCCC"
                        TextColor="Purple"
                        CornerRadius="10"
                        Margin="5" />
                <Button Grid.Column="2"
                        Text="Hartă"
                        Clicked="OnShowMapButtonClicked"
                        BackgroundColor="Purple"
                        TextColor="White"
                        CornerRadius="10"
                        Margin="5" />
            </Grid>
        </StackLayout>
    </Frame>
</ScrollView>
</ContentPage>